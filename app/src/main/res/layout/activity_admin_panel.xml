<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Admin Paneli - Bildirim Ekle"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etNotifTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Başlık"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etNotifMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Mesaj"
        android:minLines="3"
        android:gravity="top"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etNotifTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etTargetUnit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Hedef birim (ALL veya Muhendislik)"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etNotifMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSendNotif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bildirimi Kaydet"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etTargetUnit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Çıkış Yap"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnSendNotif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
